model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  price     Int
  images    String []
  address   String
  city      String
  bedroom   Int
  bathroom  Int
  latitude  String
  longitude String
  type      Type
  property  Property
  createdAt DateTime @default(now())

 user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  postDetails PostDetails?
}


enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo

}

model PostDetails{
  id String @id @default(auto()) @map("_id") @db.ObjectId // MongoDB specific ID field
  description String
  utilities String?
  pet String?
  income String?
  size Int?
  school Int?
  bus Int?
  resturant Int?
  post Post @relation(fields: [postId], references: [id])
postId String @db.ObjectId @unique
}